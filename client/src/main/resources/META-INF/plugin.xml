<idea-plugin>
    <id>org.example.langClient</id>
    <name>IntelliLangHub Client</name>
    <version>1.0.0</version>
    <vendor>IntelliLangHub</vendor>

    <description>
        Provides client interactions with centralized IntelliLang language injection repository IntelliLangHub.
    </description>

    <change-notes>Initial release of the plugin.</change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.intelliLang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="org.example.langClient.settings.SettingsConfigurable"
                id="org.example.langClient.settings.SettingsConfigurable"
                displayName="IntelliLangHub Client Settings"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="org.example.langClient.ruleActions.PullAction" class="org.example.langClient.ruleActions.PullAction"
                text="Pull Injections" description="Pull injections from repository">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>

        <action id="org.example.langClient.ruleActions.PushAction" class="org.example.langClient.ruleActions.PushAction"
                text="Commit Injection" description="Commit injection to repository">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>